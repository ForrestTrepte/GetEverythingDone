<Window x:Class="GetEverythingDone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Manager"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Field -->
        <Grid Grid.Row="0"
              Margin="10">
            <TextBox x:Name="TaskInput"
                     Width="300"
                     Height="30"/>
            <TextBlock Text="Enter task..."
                       Foreground="Gray"
                       IsHitTestVisible="False"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0"
                       Visibility="{Binding Text, ElementName=TaskInput, Converter={StaticResource StringToVisibilityConverter}}"/>
        </Grid>

        <!-- Task List -->
        <ListBox x:Name="TaskList" Grid.Row="1" Margin="10" ItemsSource="{Binding Tasks}">
                <ListBox.ItemTemplate>
                        <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding TimeRemaining, StringFormat='{}{0:0} sec'}" Width="80" Margin="5"/>
                                <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                        </DataTemplate>
                </ListBox.ItemTemplate>
        </ListBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Content="Add Task"
                    Click="AddTask_Click"
                    Margin="5"/>
            <Button Content="Remove Task"
                    Click="RemoveTask_Click"
                    Margin="5"/>
            <Button Content="Start Task"
                    Click="StartTask_Click"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
